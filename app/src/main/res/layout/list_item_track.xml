    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:id="@+id/numberView"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        lint:text="#2" />

    <TextView
