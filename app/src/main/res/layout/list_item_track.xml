    <TextView
         android:id="@+id/endDateTitleView"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/startDateTitleView"
         android:layout_alignLeft="@+id/startDateTitleView"
         android:text="Дата стопа: "
         android:textStyle="bold" />

    <TextView
        android:layout_marginRight="20dp"
        android:id="@+id/endDateView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/startDateTitleView"
        android:layout_toRightOf="@+id/startDateTitleView" />


